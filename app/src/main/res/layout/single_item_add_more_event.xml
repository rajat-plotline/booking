<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_add_more">

        <ImageView
            android:id="@+id/newImg"
            android:layout_width="37.5dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/newImg"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Avatar" />

        <LinearLayout
            android:id="@+id/type_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/eventName"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/newImg">

            <TextView
                android:id="@+id/eventType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Movie"
                android:textColor="@color/black"
                android:textSize="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:text="02:00 PM" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/type_time_layout"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/newImg">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:text="â‚¹120" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:text=" per person" />


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@id/price_layout"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/red_700"
            android:layout_marginEnd="10dp"
            android:text="add"
            android:textSize="10sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>